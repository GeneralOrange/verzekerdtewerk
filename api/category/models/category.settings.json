{
  "kind": "collectionType",
  "collectionName": "categories",
  "info": {
    "name": "Category",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
    "name": {
      "type": "string"
    },
    "pages": {
      "collection": "page",
      "via": "categories",
      "dominant": true
    },
    "slug": {
      "type": "uid",
      "targetField": "name"
    },
    "meta_data": {
      "type": "component",
      "repeatable": false,
      "component": "seo.meta-data"
    },
    "header": {
      "type": "component",
      "repeatable": false,
      "component": "custom.header"
    },
    "thumbnail": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ],
      "plugin": "upload",
      "required": false,
      "pluginOptions": {}
    },
    "description": {
      "type": "text"
    },
    "intro": {
      "type": "richtext"
    }
  }
}
