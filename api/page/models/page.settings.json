{
  "kind": "collectionType",
  "collectionName": "pages",
  "info": {
    "name": "Page",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "categories": {
      "via": "pages",
      "collection": "category"
    },
    "flexcontent": {
      "type": "dynamiczone",
      "components": [
        "custom.mailchimp-form",
        "custom.header",
        "custom.content",
        "custom.usp",
        "custom.cards"
      ]
    },
    "sidebar": {
      "type": "boolean",
      "default": true,
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "name",
      "required": true
    },
    "meta_data": {
      "type": "component",
      "repeatable": false,
      "component": "seo.meta-data"
    },
    "header": {
      "type": "component",
      "repeatable": false,
      "component": "custom.header"
    },
    "description": {
      "type": "text"
    },
    "thumbnail": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ],
      "plugin": "upload",
      "required": false
    }
  }
}
