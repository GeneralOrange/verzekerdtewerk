{
  "kind": "collectionType",
  "collectionName": "pages",
  "info": {
    "name": "Page",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
    "meta_data": {
      "type": "component",
      "repeatable": false,
      "component": "seo.meta-data"
    },
    "name": {
      "type": "string",
      "required": true
    },
    "categories": {
      "collection": "category",
      "via": "pages"
    },
    "flexcontent": {
      "type": "dynamiczone",
      "components": [
        "custom.mailchimp-form",
        "custom.header",
        "custom.content"
      ]
    },
    "sidebar": {
      "type": "boolean",
      "default": true,
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "name",
      "required": true
    }
  }
}
